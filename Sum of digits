//wap to read a number from user and perform the sum of their digits.
#include<stdio.h>
int main(){
    int n,sum=0,rem;
    printf("Enter number:");
    scanf("%d",&n);
    while(n!=0)
    {
        rem=n%10;
        sum+=rem;
        n=n/10;
    }printf("\n Sum of digits:%d",sum);
    return 0;
}

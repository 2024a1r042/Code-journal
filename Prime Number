#include<stdio.h>
int main(){
    int num,i=2,flag=0;
printf("Enter a number:");
scanf("%d",&num);
while(i<=num/2)
{
    if(num%i==0)
    {
        flag=1;
        break;}
        i++;
    }if(flag==0)
    printf("\n %d is a prime number.",num);
    else
    printf("\n %d is not a prime number.",num);
    return 0;
} 
